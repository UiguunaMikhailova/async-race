
{
    "compilerOptions": {
      "module": "esnext",
      "strict": true,
      "noImplicitAny": true,
      "target": "es2017",
      "allowJs": true,
      "checkJs": false,
      "removeComments": true,
      "downlevelIteration": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "/"
    },
    "exclude": ["node_modules"],
    "include": ["src", "modules.d.ts"]
  }